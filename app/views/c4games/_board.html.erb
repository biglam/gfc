<table class="c4board">
  <% 7.times do |i| %>
  <th class="c4cell">
  <%= radio_button_tag(:column, i) %></th>
  <% end %>

  <% 6.times do |i| %>
    <tr>
      <% @game.c4board.send("r#{i+1}").split(//).each do |cell| %>
      <td class="c4cell">
      <% if cell == "0" %>
      <%= image_tag('c4blank.png') %>
      <% elsif cell == "1" %>
      <%= image_tag('c4red.png') %>
      <% elsif cell == "2" %>
      <%= image_tag('c4blue.png') %>
      <% end %>
      </td>
      <% end %>
    </tr>
  <% end %>
</table>