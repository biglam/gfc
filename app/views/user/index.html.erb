<h2>Users</h2>
<ul>
<% @users.each do |user| %>
<li><%= link_to(user.email, user_path(user)) %></li>
<% end %>
</ul>
<h2>Current Standings</h2>
<table>
  <tr>
    <th>User</th>
    <th>Wins</th>
    <th>Draws</th>
    <th>Points</th>
  </tr>
<% @users.order(points: :desc).each do |user| %>

  <tr>
    <td><%= user.email %></td>
    <td><%= user.wins %></td>
    <td><%= user.draws %></td>
    <td><%= user.points %></td>
  </tr>
  <% end %>
</table>

<h1><%= link_to('ISSUE A CHALLENGE!', new_game_path) %></h1>